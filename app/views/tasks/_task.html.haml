= render(layout: "layouts/card", locals: { id: dom_id(task) }) do
  %h5.card-title
    = task.title

  %dl.row{ style: "font-size: 12px;" }
    %dt.col-5 Priority 
    %dd.col-7= task.priority.humanize

  .row.gx-1
    = link_to   "Edit",   edit_task_path(task),  class: "btn btn-sm btn-outline-warning col-md-12 col-xl gy-2"
    = link_to   "Log",    task_logs_path(task),  class: "btn btn-sm btn-outline-primary col-md-12 col-xl gy-2 mx-xl-1", data: { turbo_frame: "_top" }
    = button_to "Delete", task, method: :delete, class: "btn btn-sm btn-outline-danger w-100", form_class: "col-md-12 col-xl gy-2"