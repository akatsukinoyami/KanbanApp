= render(layout: "layouts/card", locals: { task: }) do
  %h5.card-title
    = task.title

  %dl.row{ style: "font-size: 12px;" }
    %dt.col-5 Priority 
    %dd.col-7= task.priority.humanize
    %dt.col-5 Assignee 
    %dd.col-7= task.user.first_name

  .row.gx-1
    = link_to   "Log",    task_path(task),       class: "btn btn-sm btn-outline-primary col-md-12 col-xl gy-2 me-xl-1" 
    = link_to   "Edit",   edit_task_path(task),  class: "btn btn-sm btn-outline-warning col-md-12 col-xl gy-2" 
    = button_to "Delete", task, method: :delete, class: "btn btn-sm btn-outline-danger w-100", form_class: "col-md-12 col-xl gy-2 ms-xl-1" 