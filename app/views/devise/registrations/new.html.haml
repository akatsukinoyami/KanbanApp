%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name, autofocus: true, placeholder: :first_name
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name, placeholder: :last_name
  .field
    = f.label :email
    %br/
    = f.email_field :email, autocomplete: "email", placeholder: :email
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: :password
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: :password
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
