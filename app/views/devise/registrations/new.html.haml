.card
  .card-body
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-group.py-2
        = f.label :first_name
        = f.text_field :first_name, autofocus: true, placeholder: :first_name, class: "form-control"
      .form-group.py-2
        = f.label :last_name
        = f.text_field :last_name, placeholder: :last_name, class: "form-control"
      .form-group.py-2
        = f.label :email
        = f.email_field :email, autocomplete: "email", placeholder: :email, class: "form-control"
      .form-group.py-2
        = f.label :password
        - if @minimum_password_length
          %em= "#{@minimum_password_length} characters minimum"
        = f.password_field :password, autocomplete: "new-password", placeholder: :password, class: "form-control"
      .form-group.py-2
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: :password, class: "form-control"
      .d-flex.justify-content-between.py-2
        = f.submit "Sign up", class: "btn btn-primary"
        = render "devise/shared/links"
